<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.DataAnalysisActivity"
    android:background="@color/black">

    <TextView
        android:id="@+id/tvHeartRate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="24dp"
        android:textColor="@color/material_dynamic_primary100"
        android:textSize="24dp" />

    <TextView
        android:id="@+id/tvExplanation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHeartRate"
        android:gravity="center"
        android:textColor="@color/material_dynamic_primary100"
        android:textSize="24dp"
        android:layout_margin="16dp"
        android:visibility="gone" />

    <Button
        android:id="@+id/bttRestingAnalysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvHeartRate"
        android:layout_margin="30dp"
        android:text="Controlla il tuo battito a riposo"
        android:visibility="visible" />

    <Button
        android:id="@+id/bttExerciseAnalysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/bttRestingAnalysis"
        android:layout_margin="30dp"
        android:text="Controlla il tuo battito dopo l'attivitÃ  fisica"
        android:visibility="visible" />

    <Button
        android:id="@+id/bttBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tvExplanation"
        android:layout_margin="16dp"
        android:text="Torna alla home"
        android:visibility="gone" />

</RelativeLayout>
